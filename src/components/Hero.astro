---

import { Image } from 'astro:assets'
export interface Props {
	name: string;
    position: string;
    image: ImageMetadata;
}

const { name, position, image} = Astro.props;



---

<div class="h-screen bg-black">
    <div class="flex h-screen justify-center items-center text-white md:px-16">
        <div class="text-center md:text-left flex flex-col md:flex-row items-center gap-12 lg:gap-20"> 
            <div data-aos="fade-right"  data-aos-duration="2000">
                <h1 class="text-4xl md:text-6xl mb-4 font-bold tracking-wider">
                    Hi, I'm <span class="bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500">{name}</span>
                </h1>
                <h2 class="text-amber-400 text-2xl md:text-3xl font-semibold mb-5">
                    <span class="bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500">{position}</span>
                </h2>
            </div>
            <div class="flex justify-center" data-aos="fade-left"  data-aos-duration="2000">
                <div class="rounded-full bg-white border-4 p-4 link-card">
                    <Image 
                        width={200}
                        src={image} 
                        alt="Jezrel Dave Vector"
                        loading="eager"
                        format="avif"
                    />
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section{
        background-color: #1b262c;
    }
    
    .gradient-bg {
        background: linear-gradient(-45deg, #ee7752, #4f36cf, #175ca6, #0dd19d);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        height: 100vh;
    }

@keyframes gradient {
	0% {
		background-position: 0% 75%;
	}
	50% {
		background-position: 100% 25%;
	}
	100% {
		background-position: 0% 75%;
	}
}
</style>