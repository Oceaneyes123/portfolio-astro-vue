---
export interface Props {
	name: string;
    position: string;
}

const { name, position } = Astro.props;

---

<div class="h-screen gradient-bg">
    <div class="flex h-screen justify-center items-center text-white">
        <div class="text-center"> 
            <h1 class="text-5xl mb-4">
                Hi, I'm <span class="text-amber-400">{name}</span>
            </h1>
            <h2 class="text-amber-400 text-2xl">
                {position}
            </h2>
        </div>
    </div>
</div>

<style>
    .hero-section{
        background-color: #1b262c;
    }
    
    .gradient-bg {
        background: linear-gradient(-45deg, #ee7752, #4f36cf, #175ca6, #0a87c2);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        height: 100vh;
    }

@keyframes gradient {
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}
</style>