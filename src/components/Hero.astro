---

import { Image } from 'astro:assets'
export interface Props {
	name: string;
    position: string;
    image: ImageMetadata;
    image2: ImageMetadata;
}

const { name, position, image, image2 } = Astro.props;



---

<div class="h-screen bg-black">
    <div class="flex h-screen justify-center items-center text-white md:px-16">
        <div class="text-center md:text-left flex flex-col md:flex-row items-center gap-12 lg:gap-20"> 
            <div>
                <h1 class="text-4xl md:text-6xl mb-4 font-bold tracking-wider">
                    Hi, I'm <span class="bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500">{name}</span>
                </h1>
                <h2 class="text-amber-400 text-2xl md:text-3xl font-semibold mb-2">
                    <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-cyan-500">{position}</span>
                </h2>
            </div>
            <div class="flex justify-center">
                <div class="flip-container">
                    <div class="flipper">
                        <div class="front rounded-full bg-white border-4 p-4 link-card">
                            <Image 
                                width={200}
                                src={image} 
                                alt="Jezrel Dave Vector"
                                loading="eager"
                                format="avif"
                            />
                        </div>
                        <div class="back rounded-full bg-white border-4 p-4 flex items-center justify-center link-card">
                            <Image 
                                width={200}
                                src={image2} 
                                alt="Jezrel Dave Vector 2"
                                loading="eager"
                                format="avif"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section{
        background-color: #1b262c;
    }
    
    .gradient-bg {
        background: linear-gradient(-45deg, #ee7752, #4f36cf, #175ca6, #0dd19d);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        height: 100vh;
    }

    .flip-container {
        perspective: 1000px;
        width: 220px;
        height: 220px;
    }
    .flipper {
        position: relative;
        width: 100%;
        height: 100%;
        transition: transform 0.6s cubic-bezier(0.4,0.2,0.2,1);
        transform-style: preserve-3d;
    }
    .flip-container:hover .flipper, .flip-container:focus-within .flipper {
        transform: rotateY(180deg);
    }
    .front, .back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .front {
        z-index: 2;
        transform: rotateY(0deg);
    }
    .back {
        transform: rotateY(180deg);
        background: linear-gradient(135deg, #f0f0f0 60%, #e0e7ff 100%);
    }

@keyframes gradient {
	0% {
		background-position: 0% 75%;
	}
	50% {
		background-position: 100% 25%;
	}
	100% {
		background-position: 0% 75%;
	}
}
</style>